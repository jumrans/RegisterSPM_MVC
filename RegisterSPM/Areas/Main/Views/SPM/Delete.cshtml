@model RegisterSPM.Models.ViewModels.SPMRejectViewModel

@{
    ViewData["Active"] = "SPM";
}


<div class="mb-3">
    <h3 class="h3 d-inline align-middle">Pembatalan/Penolakan SPM</h3>
    <h5 class="badge bg-dark text-white ms-2">Form Pembatalan Dokumen SPM</h5>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form id="formReject" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <partial name="_AlertBox" for="ErrorMessage" />
                            <input type="hidden" asp-for="SPM.Id" />
                            <input type="hidden" asp-for="SPM.DocStatus" />
                            <input type="hidden" asp-for="SPM.RejectedDate" />
                            <input type="hidden" asp-for="SPM.RejectedBy" />
                            <div class="form-group my-2">
                                <label asp-for="SPM.OPD"></label>
                                <textarea asp-for="SPM.OPD" class="form-control" readonly cols="3"></textarea>
                                <span asp-validation-for="SPM.OPD" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="SPM.NoSPM"></label>
                                <textarea asp-for="SPM.NoSPM" class="form-control" readonly cols="3"></textarea>
                                <span asp-validation-for="SPM.NoSPM" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="SPM.AlasanPenolakan"></label>
                                <textarea asp-for="SPM.AlasanPenolakan" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="SPM.AlasanPenolakan" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer border-top">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-outline-danger form-control">Batal</a>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-primary form-control" id="submitButton">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
<script>
    $('#submitButton').click(function(e) {
        var form = $("#formReject");
        swal({
            title: 'Tolak/Batalkan SPM?',
            text: 'SPM batal akan masuk di daftar penolakan.',
            icon: 'warning',
            buttons: true,
            dangerMode: true
        }).then(function(result) {
            if (result) {
                form.submit();
            }
        });
    })
</script>
}